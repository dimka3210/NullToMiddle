{% extends "MainBundle:base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <a href="{{ url('post_new') }}" class="btn btn-success col-xs-12 col-sm-3 col-md-3 col-lg-2 col-sm-push-9 col-md-push-9 col-lg-push-10">Создать</a>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th>Title</th>
                    <th>Text</th>
                    <th>Date</th>
                </tr>
                {% for model in models %}
                    <tr>
                        <td>{{ model.title }}</td>
                        <td>{{ model.text }}</td>
                        <td>{{ model.dateCreated }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
